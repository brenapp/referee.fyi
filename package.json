{
  "name": "referee-fyi",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "scripts": {
    "frontend:dev": "vite --host --port 3000",
    "frontend:build": "tsc && vite build",
    "lib:dev": "concurrently \"npm --prefix lib/share run dev\" \"npm --prefix lib/consistency run dev\" \"npm --prefix lib/pdf  run dev\" \"npm --prefix lib/rules run dev\"",
    "lib:build": "npm --prefix lib/rules run build && npm --prefix lib/consistency run build && npm --prefix lib/share run build && npm --prefix lib/pdf run build",
    "sync:dev": "npm --prefix worker/sync run dev",
    "sync:dev:secure": "npm --prefix worker/sync run dev:secure",
    "sync:build": "npm run lib:build && npm --prefix worker/sync run build",
    "sync:deploy": "npm run lib:build && npm --prefix worker/sync run deploy",
    "sync:typegen": "openapi-typescript http://localhost:8787/openapi --output types/generated/worker/sync.d.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "pages:build": "npm run lib:build && npm run frontend:build",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run lib:dev\"",
    "build": "npm run --workspaces --if-present build && npm run frontend:build"
  },
  "workspaces": [
    "lib/*",
    "worker/*"
  ],
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.2",
    "@heroicons/react": "^2.1.5",
    "@referee-fyi/consistency": "^1.0.0",
    "@referee-fyi/rules": "^1.0.0",
    "@referee-fyi/share": "^1.0.0",
    "@sentry/react": "^8.22.0",
    "@sentry/vite-plugin": "^2.21.1",
    "@tanstack/query-async-storage-persister": "^5.17.15",
    "@tanstack/react-query": "^5.17.15",
    "@tanstack/react-query-persist-client": "^5.17.15",
    "@tanstack/react-router": "^1.120.10",
    "@tanstack/react-router-devtools": "^1.120.10",
    "@tanstack/react-virtual": "^3.10.7",
    "@types/uuid": "^9.0.7",
    "@use-gesture/react": "^10.3.0",
    "csv": "^6.3.5",
    "heroicons": "^2.0.18",
    "hono": "^4.9.4",
    "idb-keyval": "^6.2.1",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "motion": "^12.15.0",
    "openapi-fetch": "^0.14.0",
    "qr-creator": "^1.0.0",
    "qr-image": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "robotevents": "^6.0.4",
    "sort-by": "^1.2.0",
    "tailwind-merge": "^2.0.0",
    "use-resize-observer": "^9.1.0",
    "uuid": "^9.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.26.3",
    "@cloudflare/workers-types": "^4.20231121.0",
    "@referee-fyi/rules": "^1.0.0",
    "@referee-fyi/worker-rules-indexer": "^0.0.0",
    "@referee-fyi/worker-sync": "^1.0.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tanstack/router-plugin": "^1.120.10",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-window": "^1.8.8",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "openapi-typescript": "^7.9.1",
    "postcss": "^8.4.24",
    "prettier": "^3.1.0",
    "rollup": "^4.9.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5.3",
    "vite": "^7.1.3",
    "vite-plugin-markdown": "^2.2.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-pwa": "^0.17.2",
    "vite-plugin-version-mark": "^0.0.10",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^4.33.0",
    "zod": "^3.25"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.43.0"
  }
}
